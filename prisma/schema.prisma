// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}



model Posts {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  author    String @default("Abdi Zamed Mohamed")
  slug      String
  tags      String[]
  image     String
  avatar    String @default("https://avatars.githubusercontent.com/u/98351506?v=4")
  category  String
  excerpt   String
  title     String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


